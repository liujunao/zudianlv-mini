<view class='container' style='padding-bottom: 360rpx'>
  <view class='detail-box flex-row-center'>
    <image mode='aspectFit' style='height:400rpx;width:600rpx' src='{{postDetail.usedImage}}'></image>
  </view>

  <view class='detail-box'>
    <view class='flex-col'>
      <view class='flex-row-item-center'>
        <image class='avater-image' src='{{postDetail.avatarUrl}}'></image>
        <view class='flex-col'>
          <image wx:if="{{postDetail.gender==0}}" class='gender-icon' src='{{manUrl}}'></image>
          <image wx:else class='gender-icon' src='{{womanUrl}}'></image>
          <view class='type-font' style='color:#000000'>车主描述</view>
        </view>
      </view>

      <view class='black-bigger-font' style='margin:15rpx 0 15rpx 60rpx'>
        <view style='padding:0 40rpx 20rpx 0'>{{postDetail.message}}</view>
      </view>
    </view>
    <view class='post-bottom-box'>
      <view class='flex-row-item-center'>
        <image src='{{orientedUrl}}' style='width:25rpx;height:25rpx;margin-right:4rpx'></image>
        <view class='main-normal-font'>{{postDetail.area}}{{postDetail.areaNum}}栋</view>
      </view>
      <view class='time-font' style='position:absolute;right:0;bottom:0'>{{postDetail.createTime}}发布</view>
    </view>
  </view>

  <view class='detail-box'>
    <view class='flex-row-SpcBwn'>
      <view class='black-label-font'>出售价格</view>
      <view class='black-normal-font'>{{postDetail.money}}￥</view>
    </view>
  </view>

  <view class='detail-box'>
    <view class='flex-row-SpcBwn'>
      <view></view>
      <view wx:if="{{!collected}}" class='flex-row-item-center' bindtap='collectClick'>
        <image src='../../assert/icons/collect.png' class='collect-icon'></image>
        <view class='collect-font'>收藏此贴</view>
      </view>

      <view wx:else class='flex-row-item-center' bindtap='collectClick'>
        <image src='../../assert/icons/collected.png' class='collect-icon'></image>
        <view class='collect-font'>已收藏</view>
      </view>

    </view>
  </view>

  <button wx:if="{{type==1}}" class='confirm-btn' style="position:fixed; bottom:0;" bindtap='publishClick'>确认发布</button>
  <button wx:if="{{type==2}}" class='confirm-btn' style="position:fixed; bottom:0" bindtap='modifyClick'>修改</button>
  <button wx:if="{{!type}}" class='confirm-btn' style="position:fixed; bottom:0;" bindtap='contactClick'>联系Ta</button>
</view>