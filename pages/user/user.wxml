<!-- 补全个人信息 -->
<view>
  <form bindsubmit='appendUser'>
    <input name="college" placeholder="请输入学院"/><!-- 尽量做成下拉框 -->
    <input name="grade" placeholder="请输入年级"/><!-- 下拉框 -->
    <input name="area" placeholder="请输入宿舍区"/><!-- 下拉框 -->
