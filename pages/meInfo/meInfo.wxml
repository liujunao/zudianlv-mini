<view class='itemBox'>
  <view class='labelFont'>*学院</view>
  <picker bindchange="collegeChange" range="{{collegeArray}}">
    <view wx:if="{{college}}" class='text-font'>
      {{college}}
    </view>
    <view wx:else class='unselected-font'>
      未选择
    </view>
  </picker>
</view>

<view class='itemBox'>
  <view class='labelFont'>*年级</view>
  <picker bindchange="gradeChange" range="{{gradeArray}}">
    <view wx:if="{{grade}}" class='text-font'>
      {{grade}}
    </view>
    <view wx:else class='unselected-font'>
      未选择
    </view>
  </picker>
</view>

<view class='itemBox'>
  <view class='labelFont'>*楼栋</view>
  <picker mode="multiSelector" bindchange="bindMultiPickerChange" value="{{multiIndex}}" range="{{multiArray}}">
    <view wx:if="{{!apartment}}" class='unselected-font'>未选择</view>
    <view wx:else class='text-font'>{{apartment}}{{building}}栋</view>
  </picker>
</view>


<view class='itemBox'>
  <view class='labelFont'>*校园身份认证</view>
  <view wx:if="{{identified}}" class='flex-row-item-center'>
    <image src='{{passUrl}}' class='passIcon'></image>
    <view class='selectedFont'>已认证</view>
  </view>
  <view wx:else class='unselected-font' bindtap='openIdentifyClick'>未认证</view>
</view>

<view wx:if="{{openIdentify}}" class='detail-box flex-row-item-center' bindtap='addPicClick'>
  <image wx:if='{{imageUrl}}' src='{{imageUrl}}' class='addImage'></image>
  <view wx:else class='addPictureBox flex-row-item-center  flex-row-center'>
    <image src='../../assert/icons/addPic.png' style='width:65rpx; height:65rpx'></image>
  </view>
  <view wx:if='{{imageUrl}}' class='unselected-font' style='margin-left:50rpx'>更换图片</view>
  <view wx:else class='unselected-font' style='margin-left:50rpx'>上传学生证照片</view>
</view>

<view class='itemBox' style='margin-top:40rpx'>
  <view class='labelFont'>联系方式(微信)</view>

  <input wx:if="{{!weixin || changeWeixin}}" bindinput="weixinInput" placeholder="{{placeholder}}" class='input-area' style='width:400rpx' placeholder-style="font-size:0.88em" />
  <view wx:else class='text-font' bindtap='editWeixinClick'>{{weixin}}</view>


</view>



<button wx:if="{{!identified}}" class='confirm-btn' style='margin-top:100rpx' bindtap='submitClick'>上传个人信息</button>

<button wx:if="{{identified && !ischanging}}" class='buttonNotWork' style='margin-top:100rpx'>更新个人信息</button>

<button wx:if="{{identified && ischanging}}" class='confirm-btn' style='margin-top:100rpx' bindtap='submitClick'>更新个人信息</button>